<%# locals: (resource:, actions:) -%>

<% actions.values.each do |action| %>
  <%=
    table_action_button resource_url_for(resource, action: action.route_options.action, **action.route_options.options),
                      icon: action.icon,
                      label: action.label,
                      color: action.color,
                      method: action.route_options.method,
                      confirm: action.confirmation
  %>
<% end %>
