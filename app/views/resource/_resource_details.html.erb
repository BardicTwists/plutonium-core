<%# locals: (details:) -%>

<%= resource_component :block, rounded: :all do %>
  <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
    <div class="w-full md:w-1/2">

    </div>
    <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end flex-shrink-0">
      <%=
        render partial: "toolbar_actions", locals: {
          actions: details.actions.record_actions.permitted_for(policy(details.record)),
          resource: details.record,
        }
      %>
    </div>
  </div>

<% end %>

<%= resource_component :block, rounded: :top do %>
  <ul class="text-sm font-medium flex flex-wrap -mb-px -ms-px">
    <li class="me-2">
      <a class="inline-block p-4 text-primary-600 border-b-2 border-primary-600 rounded-t-lg active dark:text-primary-500 dark:border-primary-500" aria-current="page" href="">Details</a>
      <a class="inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300" href="">Something</a>
    </li>
  </ul>
<% end %>

<%= resource_component :block do %>

  <div class="p-4">
    <div class="px-0">
      <h3 class="text-base font-semibold leading-7 text-gray-900 dark:text-gray-400">
        <%= resource_name(resource_class) %>
        #<%= details.record.to_param %>
      </h3>
    </div>
    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <% details.fields.each do |name, field| %>
          <div class="py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-300">
              <%= field.label %>
            </dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 dark:text-gray-400 sm:col-span-2 sm:mt-0">
              <%= field.render self, details.record %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

<% end %>
