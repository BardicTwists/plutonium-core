<% if to %>
  <%= link_to to, role: "button", **component_attributes do %>
    <%= render_icon icon if icon %>
    <span><%= label %></span>
  <% end %>
<% else %>
  <button <%= render_component_attributes %> type="<%= type %>" %>
    <%= render_icon icon if icon %>
    <span><%= label %></span>
  </button>
<% end %>
